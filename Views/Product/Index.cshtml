@model WebApp.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/productcode.js" type="text/javascript"></script>
    <title>Add Product</title>
</head>
<body>
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="col-sm-1">
                        <h2 class="or">Add Product!</h2>
                    </div>
                    <div class="signup-form">
                      @using (Html.BeginForm("Index", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                       
                            @Html.TextBoxFor(model => model.Code, new { @placeholder = "Product Code" })
                            @Html.ValidationMessageFor(model => model.Code)

                            <input type="button" id="b1" value="check" />

                            <div id="checking">Checking...</div>
                            <div id="result"></div>


                            

                            @Html.TextBoxFor(model => model.Price, new { @placeholder = "Price" })
                            @Html.ValidationMessageFor(model => model.Price)

                        @Html.Label("Image Upload")
                        @Html.TextBoxFor(m => m.ImagePath, new { type = "file" })
                        @Html.ValidationMessageFor(model => model.ImagePath)


                            @Html.TextBoxFor(model => model.BrandName, new { @placeholder = "Brand Name" })
                            @Html.ValidationMessageFor(model => model.BrandName)

                            @Html.TextBoxFor(model => model.Quantity, new { @placeholder = "Quantity" })
                            @Html.ValidationMessageFor(model => model.Quantity)

                            @Html.TextBoxFor(model => model.Category, new { @placeholder = "Category" })
                            @Html.ValidationMessageFor(model => model.Category)

                           
                        <button type="submit" class="btn btn-default">Add</button>
                      }

                    </div>
                </div>

            </div>
        </div>
</section>
</body>
</html>
