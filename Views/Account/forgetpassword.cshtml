@model WebApp.Models.WebClient
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>forgetpassword</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/forget.js" type="text/javascript"></script>
</head>
<body>
   

    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="col-sm-1">
                        <h2 class="or">Forget Password</h2>
                        <div class="col-sm-1">
                            <div class="login-form">
                               
                                @using (Html.BeginForm("resetPassword", "Account", FormMethod.Post))
                                {
                                    @Html.TextBoxFor(model => model.username, new { @placeholder = "Enter UserName", @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.username)
                                    <input type="button" id="b1" value="check" />
                                    <div id="checking"> Retrieving data...</div>


 
                                    <div id="question"></div>
                                    
                                   

                                    @Html.TextBoxFor(model => model.secretanswer, new { @placeholder ="Answer the secret Question", @required= "required"})
                                    @Html.ValidationMessageFor(model => model.secretanswer)
                                    <a href="~/Account/SignUp"> Do not have an acount! Sign Up</a>
                                    <button type="submit" class="btn btn-default" id="log">Submit</button>
                                }
                                       

                            </div><!--/login form-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!--/form-->
</body>
</html>
