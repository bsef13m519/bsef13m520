@model WebApp.Models.WebClient
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>Login</title>
</head>
<body>


    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="col-sm-1">
                        <h2 class="or">Login to your account</h2>
                        <div class="col-sm-1">
                            <div class="login-form">
                                <!--login form-->
                            @using (Html.BeginForm("login", "Account", FormMethod.Post))
                            {
                                @Html.TextBoxFor(model => model.username, new { @placeholder = "User Name", @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.username)
                                @Html.TextBoxFor(model => model.password, new { type = "password", @placeholder = "Password", @class = "form-control", @required = "required", @pattern = ".{6,}" })
                                @Html.ValidationMessageFor(model => model.password)
                                <span>
                                    <input type="checkbox" class="checkbox" id="cblog">
                                    Keep me signed in
                                </span>
                                <br>
                                <a href="~/Account/forgetpassword">Forget Password</a>
                                <br>
                                <a href="~/Account/SignUp"> Do not have account! SignUp</a>
                                <br>
                                <button type="submit" class="btn btn-default" id="log">Login</button>
                            }
                              
                               
                            </div><!--/login form-->
                        </div>
                    </div>
                </div>
                </div>
            </div>
    </section><!--/form-->

</body>
</html>
