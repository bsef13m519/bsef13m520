@model WebApp.Models.WebAdmin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>adminLogin</title>
</head>
<body>
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">

                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Admin Account Login </h2>
                       
                            @using (Html.BeginForm("login", "Admin", FormMethod.Post))

                            {

                                @Html.TextBoxFor(model => model.email, new { @placeholder = "Email", @class = "form-control", @required = "required", @pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}$" })

                                @Html.TextBoxFor(model => model.password, new { type = "password", @placeholder = "Password", @class = "form-control", @required = "required", @pattern = ".{6,}" })
                                <span>
                                    <input type="checkbox" class="checkbox">
                                    Keep me signed in
                                </span>
                                <br>
                                <button type="submit" class="btn btn-default">Login</button>
                            }

                            
                       
                    </div><!--/login form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
</body>
</html>
